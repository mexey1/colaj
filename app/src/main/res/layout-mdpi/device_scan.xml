<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/device_scan_layout"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:gravity="center|left"
            android:textSize="@dimen/_20sp"
            android:textColor="@color/black"
            android:layout_margin="@dimen/_10dp"
            android:text="@string/bt_devices"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:textSize="@dimen/_10sp"
            android:padding="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:background="@color/grey_light"
            android:text="@string/select_bt_devices"/>
        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/_10dp"
            android:id="@+id/logo"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0dp"
                android:layout_margin="@dimen/_10dp"
                android:padding="@dimen/_10dp"
                android:scrollbars="vertical"
                android:layout_weight="1">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    android:visibility="gone"
                    android:id="@+id/bt_items"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_50dp"
                    android:id="@+id/text"
                    android:text="@string/tbd"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50dp"
            android:layout_margin="@dimen/_10dp"
            android:textColor="@color/button_pressed_text"
            android:background="@drawable/peter_river_transparent_button"
            android:id="@+id/retry"
            android:text="@string/retry"/>
    </LinearLayout>
</LinearLayout>