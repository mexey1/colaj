<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="@dimen/_10dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sp"
        android:layout_margin="@dimen/_30dp"
        android:id="@+id/title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_10dp"
        android:textColor="@color/grey1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:gravity="center"
        android:layout_margin="@dimen/_10dp"
        android:orientation="horizontal">
        <View
            android:layout_width="@dimen/_5dp"
            android:layout_height="@dimen/_5dp"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_2dp"
            android:background="@drawable/yellow_background_view"
            android:id="@+id/view_one"/>
        <View
            android:layout_width="@dimen/_5dp"
            android:layout_height="@dimen/_5dp"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_2dp"
            android:background="@drawable/pink_background_view"
            android:id="@+id/view_two"/>
        <View
            android:layout_width="@dimen/_5dp"
            android:layout_height="@dimen/_5dp"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_2dp"
            android:background="@drawable/purple_background_view"
            android:id="@+id/view_three"/>
        <View
            android:layout_width="@dimen/_5dp"
            android:layout_height="@dimen/_5dp"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_2dp"
            android:background="@drawable/turquoise_background_view"
            android:id="@+id/view_four"/>
    </LinearLayout>
</LinearLayout>